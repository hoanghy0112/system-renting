# ================================
# Production Environment Variables
# ================================
# Copy this file to .env.prod and fill in the values

# Database
DATABASE_URL=postgresql://prod_user:STRONG_PASSWORD_HERE@postgres:5432/distributed_compute?schema=public
POSTGRES_PASSWORD=STRONG_PASSWORD_HERE

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD_HERE

# InfluxDB
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=GENERATE_SECURE_TOKEN_HERE
INFLUXDB_ORG=distributed-compute
INFLUXDB_BUCKET=metrics
INFLUXDB_ADMIN_PASSWORD=STRONG_INFLUX_PASSWORD_HERE

# Clerk Authentication
CLERK_SECRET_KEY=sk_live_xxxxx
CLERK_PUBLISHABLE_KEY=pk_live_xxxxx

# FRP Proxy Server
FRP_SERVER_ADDR=your-proxy-domain.com
FRP_SERVER_PORT=7000
FRP_AUTH_TOKEN=GENERATE_SECURE_FRP_TOKEN_HERE
FRP_PORT_RANGE_START=10000
FRP_PORT_RANGE_END=10100
FRP_DASHBOARD_USER=admin
FRP_DASHBOARD_PASSWORD=STRONG_DASHBOARD_PASSWORD_HERE

# Application
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://your-frontend-domain.com
